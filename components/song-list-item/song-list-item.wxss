/* components/song-list-item/song-list-item.wxss */
.song-list {
  padding: 10rpx 30rpx;
}
.song-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  /* background-color: red; */
}
.index {
  width: 35rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}
.song-info {
  display: flex;
  flex-flow: column nowrap;
  padding-left: 25rpx;
  
}
.song-info .song-name {
  font-size: 32rpx;
  font-weight: 550;
  color: #555;
}
.song-info .artist {
  font-size: 26rpx;
  color: #999;
}