/* pages/song-list/song-list.wxss */
.song-menu {
  position: relative;
  box-sizing: border-box;
  height: 30vh;
  padding: 0 60rpx;
  margin-bottom: 30rpx;
  color: #f1f1f1;
  /* background-color: plum; */
}
.song-menu-info {
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
  display: flex;
  /* background-color: red; */
}
.song-menu-info .img {
  width: 200rpx;
}
.right {
  flex: 1;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;

  padding-left: 30rpx;
  /* background-color: pink; */
}
.right .name {
  padding-bottom: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
}
.right .creator {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
  font-size: 28rpx;
}
.right .creator .avatar {
  width: 38rpx;
  margin-right: 16rpx;
  /* border: white light; */
  border-radius: 50%;
}
.right .description {
  color: #eee;
  font-size: 26rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
/* 背景蒙板 */
.bg-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -99;
}
.mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #0004;
  z-index: -2;
  backdrop-filter: blur(7px);
}
