<!--pages/main-music/main-music.wxml-->
<van-search
  value="{{ value }}"
  shape="round"
  placeholder="请输入搜索关键词"
  bind:click-input="onSearchClick"
/>

<!-- banner 轮播图 -->
<view>
  <swiper 
    class="banner"
    indicator-dots
    autoplay
    circular
    interval="2500"
  >
  <block wx:for="{{musicBannerList}}" wx:key="bannerId">
    <swiper-item>
      <image class="banner-img" bindtap="onBannerClick" src="{{item.pic}}" data-url="{{item.url}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
</view>

<!-- 推荐歌曲 -->
<view class="recommend">
  <section-header title="推荐歌曲" bindtap="onMoreClick">
  </section-header>
  <view class="recommend-song">
    <block wx:for="{{songList}}" wx:key="*this">
      <song-item songItem="{{item}}"></song-item>
    </block>
  </view>
</view>