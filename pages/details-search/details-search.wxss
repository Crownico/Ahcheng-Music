/* pages/details-search/details-search.wxss */
.hotSearch {
  box-sizing: border-box;
  padding: 10rpx 40rpx;
}
.hotSearch .keyword {
  display: flex;
  flex-flow: row wrap;
  padding-top: 20rpx;
}
.hotSearch .keyword .item {
  box-sizing: content-box;
  height: 40rpx;
  padding: 0 20rpx;
  margin: 10rpx 10rpx;
  border: #fff solid 1px;
  border-radius: 20px;
  line-height: 40rpx;
  font-size: 26rpx;
  background-color: #0f02;
}

/* 搜索建议 */
.search-suggestion {
  position: absolute;
  /* top: 10px; */
  left: 0;
  right: 0;
  
  background-color: #fff;
}
.search-suggestion .header {
  padding-left: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.search-suggestion .header .search-keyword {
  font-size: 34rpx;
  font-weight: 625;
  color: rgb(6, 206, 6);
}
.search-suggestion .suggestion {
  padding: 4rpx 50rpx;
  color: #777;
}

/* 搜索结果 */
.result-header {
  padding: 20rpx 40rpx;
  font-size: 36rpx;
  font-weight: 700;
}
.result-header .search-keyword {
  font-weight: 625;
  color: rgb(6, 206, 6);
}